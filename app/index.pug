doctype html
html(lang='en')

  head

    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='description', content='Ultimate Tic Tac Toe')
    title Ultimate Tic Tac Toe

    link(href='https://fonts.googleapis.com/css?family=Open+Sans', rel='stylesheet', type='text/css')
    link(href='/bower_components/bootstrap/dist/css/bootstrap.min.css', rel='stylesheet')

    // build:css styles/main.min.css
    link(rel='stylesheet', href='styles/main.css')
    // endbuild

  body

    header
      h1 Ultimate Tic Tac Toe

    #ultimate-tic-tac-toe.container

      each urow in [0,1,2]
        .board-row.row
          each ucolumn in [0,1,2]
            .tic-tac-toe.container.col-xs-4(id = urow*3 + ucolumn)
              each row in [0,1,2]
                .ttt-row.row
                  each column in [0,1,2]
                    .tile.col-xs-4(id = (urow*3 + ucolumn) + ',' + (row*3 + column))

      .row
        #spinner.col-xs-3
        #players.col-xs-6
          .btn-group.dropup
            button#btn-player-x.button.btn.dropdown-toggle.btn-success(data-toggle='dropdown')
              | human
            ul.dropdown-menu
              li: a.player(data-player-for='x') human
              li: a.player(data-player-for='x') starter AI
              li: a.player(data-player-for='x') smart AI
          | &nbsp;vs&nbsp;
          .btn-group.dropup
            button#btn-player-o.button.btn.dropdown-toggle.btn-danger(data-toggle='dropdown')
              | smart AI
            ul.dropdown-menu
              li: a.player(data-player-for='o') human
              li: a.player(data-player-for='o') starter AI
              li: a.player(data-player-for='o') smart AI
        #commands.col-xs-3
          #btn-new-game.button.btn.btn-default New game

      .row
        #credit.col-xs-12
          | By 
          a(href='https://github.com/jordao76') Jord√£o
          | . Check it out on 
          a(href='https://github.com/jordao76/ultimate-tic-tac-toe') GitHub
          | .

    #modal-game-over.modal
      .modal-dialog
        .modal-content
          #modal.modal-header
            h2#end-text.modal-title

